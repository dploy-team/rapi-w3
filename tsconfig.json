{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "w3": ["dist/w3"],
      "w3/*": ["dist/w3/*"],
      "@env/*": ["projects/w3/src/environments/*"],
      "@dploy-rapi/w3/*": ["dist/w3/*"]
    }
  }
}
